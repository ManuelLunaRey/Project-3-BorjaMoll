<h1>Agregar restaurants</h1>
    <form action="">
  
      <label for="fname">Name the restaurant</label>
      <input type="text" id="fname" name="firstname" placeholder="restaurant...">
  
      <label for="lname">Last Name</label>
      <input type="text" id="lname" name="lastname" placeholder="Your last name..">
  
      <label for="country">Country</label>
      <select id="country" name="country">
        <option value="australia">Spain</option>
        <option value="canada">Andorra</option>
        <option value="usa">Germany</option>
      </select>
  
      <label for="subject">Subject</label>
      <textarea id="subject" name="subject" placeholder="Write something.." style="height:200px"></textarea>
      <input type="submit" value="Submit">
      <input type="button" value="Cancelar" onclick="location.href='http://localhost:3000/admin'">
    </form>